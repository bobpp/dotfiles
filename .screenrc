escape ^x^x

defencoding UTF-8
encoding UTF-8 UTF-8
defutf8 on

vbell off

bind w windowlist -b
bind s  # reset s key
startup_message off
autodetach on
defhstatus I^En:^EtI
hardstatus ignore "%w | %h"
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"
defscrollback 4096

bind ^U encoding utf8
bind ^E encoding euc
bind ^J encoding sjis

defbce on
term xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'
