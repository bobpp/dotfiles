# Alias
os_architecture=$(uname)
if [ $os_architecture = "Darwin" ]; then
  alias ls='ls -G'
elif [ $os_architecture = "Linux" ]; then
  alias ls='ls -F --color=always'
fi
alias ll='ls -l'
alias la='ls -la'
alias vi=vim
alias screen='screen -U'
alias today="date '+%Y%m%d'"
alias view='vim -R'

if [ $os_architecture = "Darwin" ]; then
  alias scratchpad='code -n'
fi
